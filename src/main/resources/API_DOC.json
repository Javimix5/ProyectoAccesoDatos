          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Cliente" }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Cliente creado",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Cliente" }
              }
            }
          }
        }
      }
    },
    "/api/clientes/{id}": {
      "get": {
        "tags": ["Cliente Controller"],
        "summary": "Obtener cliente por ID",
        "operationId": "getClienteById",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer", "format": "int32" }
          }
        ],
        "responses": {
          "200": {
            "description": "Cliente encontrado",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Cliente" }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["Cliente Controller"],
        "summary": "Eliminar cliente por ID",
        "operationId": "deleteCliente",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer", "format": "int32" }
          }
        ],
        "responses": {
          "200": { "description": "Cliente eliminado" }
        }
      }
    },
