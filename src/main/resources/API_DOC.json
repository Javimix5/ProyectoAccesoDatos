  "components": {
    "schemas": {
      "Cliente": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "format": "int32" },
          "nombre": { "type": "string" },
          "apellido1": { "type": "string" },
          "apellido2": { "type": "string" },
          "telefono": { "type": "string" },
          "email": { "type": "string" },
          "direccion": { "type": "string" },
          "dni": { "type": "string" }
        }
      },
      "Producto": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "format": "int32" },
          "nombre": { "type": "string" },
          "coleccion": { "type": "string" },
          "stock": { "type": "integer", "format": "int32" },
          "precio": { "type": "number" },
          "idProveedor": { "type": "integer", "format": "int32" }
        }
      },
      "Proveedor": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "format": "int32" },
          "nombre": { "type": "string" },
          "emailContacto": { "type": "string" }
        }
      },
      "DetalleVenta": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "format": "int32" },
          "producto": { "$ref": "#/components/schemas/Producto" },
          "cantidad": { "type": "integer", "format": "int32" },
          "precioUnitario": { "type": "number" },
          "subtotal": { "type": "number" }
        }
      },
      "Venta": {
        "type": "object",
        "properties": {
          "numFactura": { "type": "integer", "format": "int32" },
          "fechaVenta": { "type": "string", "format": "date-time" },
          "cliente": { "$ref": "#/components/schemas/Cliente" },
          "totalImporte": { "type": "number" },
          "detalles": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/DetalleVenta" }
          }
        }
      },
      "DetalleCompra": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "format": "int32" },
          "producto": { "$ref": "#/components/schemas/Producto" },
          "cantidad": { "type": "integer", "format": "int32" },
          "precioUnitario": { "type": "number" },
          "subtotal": { "type": "number" }
        }
      },
      "Compra": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "format": "int32" },
          "proveedor": { "$ref": "#/components/schemas/Proveedor" },
          "fecha": { "type": "string", "format": "date-time" },
          "totalImporte": { "type": "number" },
          "detalles": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/DetalleCompra" }
          }
        }
      }
    }
  }
